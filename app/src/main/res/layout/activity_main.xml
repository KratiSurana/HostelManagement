<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Select Category"
        android:textStyle="bold"
        android:textSize="40sp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:tooltipText="Admin">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/img_btn_admin"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/admin"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:hint="Admin"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <ImageButton
                android:id="@+id/img_btn_manager"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/manager"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:hint="Manager"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/img_btn_student"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/student"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:hint="Student"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp">


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="130dp"
            android:orientation="vertical"
            android:gravity="center">


        <ImageButton
            android:id="@+id/img_btn_warden"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/warden"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:hint="Warden"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            />

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="130dp"
            android:orientation="vertical"
            android:gravity="center">
        <ImageButton
            android:id="@+id/img_btn_mess"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/mess_manager"
            tools:ignore="VectorDrawableCompat" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:hint="Mess Manager"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"
            />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>